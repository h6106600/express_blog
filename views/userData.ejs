<%- include header %>
<style>
  .table{
    margin-left: auto;
    margin-right: auto;
    border: 1px solid white;
  }
  th{
    text-align: center;
  }
  td{
    width:100px;
    text-align: center;
  }
</style>

<div class="container">
  <table class="table">
    <thead>
      <th>用戶名</th>
      <th>密碼</th>
      <th>信箱</th>
      <th>刪除用戶</th>
    </thead>
    <tbody>
      <% for(var i=0; i<userData.length; i++){ %>
        <tr>
          <td id="a<%= (i+1) %>"><%= userData[i].name %></td>
          <td><%= userData[i].password %></td>
          <td><%= userData[i].email %></td>
          <td><button class="btn btn-primary">刪除</button></td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<script>
  $(function(){

    $(".btn").click(function(){
      var name = $(this).parent().siblings("td:eq(0)").text();
      $.post("/delete",{name:name}).done(function(data){
        alert(data);
      })
    })

  });
</script>

</body>
</html>
